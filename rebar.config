{erl_opts, [
%	{d, 'DEBUG'}
]}.
{deps, [
	{wx_cfg_library, {git, "https://github.com/supermuscleman/wx_cfg_library.git", {tag, "v0.1.0"}}},
	{wx_db_library, {git, "https://github.com/supermuscleman/wx_db_library.git", {tag, "v0.1.0"}}},
	{wx_event_library, {git, "https://github.com/supermuscleman/wx_event_library.git", {tag, "v0.1.0"}}},
	{wx_log_library, {git, "https://github.com/SuperMuscleMan/wx_log_library.git", {tag, "v0.1.0"}}},
	{wx_net_library, {git, "https://github.com/supermuscleman/wx_net_library.git", {tag, "v0.1.0"}}},
	{wx_timer_library, {git, "https://github.com/supermuscleman/wx_timer_library.git", {tag, "v0.1.0"}}},
	{wx_overman, {git, "https://github.com/supermuscleman/wx_overman.git", {tag, "v0.1.0"}}}
]}.

{relx, [{release, {wx_server_example, "0.1.0"},
	[
		cowboy,
		wx_cfg_library,
		wx_db_library,
		wx_event_library,
		wx_log_library,
		wx_net_library,
		wx_timer_library,
		wx_overman,
		wx_server_example,
		sasl
	]},
	
	{mode, dev},
	{system_libs, false},

        %% automatically picked up if the files
        %% exist but can be set manually, which
        %% is required if the names aren't exactly
        %% sys.config and vm.args
        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"}

        %% the .src form of the configuration files do
        %% not require setting RELX_REPLACE_OS_VARS
        %% {sys_config_src, "./config/sys.config.src"},
        %% {vm_args_src, "./config/vm.args.src"}
]}.

{profiles, [{prod, [{relx,
                     [%% prod is the default mode when prod
                      %% profile is used, so does not have
                      %% to be explicitly included like this
                      {mode, prod}

                      %% use minimal mode to exclude ERTS
                      %% {mode, minimal}
                     ]
            }]}]}.
